set folder = "~/.mail"
set sleep_time = 0 #To not wait when changing folder
set editor = "vim"
source ~/.mutt/mailboxes

source "~/.mutt/ens"
folder-hook $folder "source ~/.mutt/ens"

source "~/.mutt/main"
folder-hook $folder "source ~/.mutt/main"

macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/main<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/ens<enter><change-folder>!<enter>'


