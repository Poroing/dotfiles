# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = ENS, Main
maxsyncaccounts = 2

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
incremental = yes

[Account Main]
localrepository = Main-Local
remoterepository = Main-Remote
autorefresh = 1.0

[Account ENS]
localrepository = ENS-Local
remoterepository = ENS-Remote
autorefresh = 1.0

[Repository Main-Local]
type = Maildir
localfolders = ~/.mail/main

[Repository ENS-Local]
type = Maildir
localfolders = ~/.mail/ens

[Repository ENS-Remote]
type = IMAP
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda f: f not in ['INBOX/Sent', 'INBOX/Trash', 'INBOX/Drafts']
remotehost = reda.ens-rennes.fr
remoteport = 993
remoteuser = jjouv422
remotepass = 7p67UgsP

[Repository Main-Remote]
type = IMAP
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remotehost = imap-mail.outlook.com
remoteport = 993
remoteuser = jean-18-09@hotmail.fr
remotepass = 18091997wwprgiom
